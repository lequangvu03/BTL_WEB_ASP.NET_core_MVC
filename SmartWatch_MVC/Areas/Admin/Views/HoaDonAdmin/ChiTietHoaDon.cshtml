@{
    ViewData["Title"] = "ChiTietHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using SmartWatch_MVC.Models;
@model SmartWatch_MVC.ViewModels.HoaDonViewModel

<h2>Chi tiết hóa đơn</h2>
<hr />

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body ">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="TTKhachHang.MaKhanhHang">mã khách hàng</label>
                    <input asp-for="TTKhachHang.MaKhanhHang" type="text" class="form-control" disabled>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="TTKhachHang.TenKhachHang">Tên khách hàng</label>
                    <input asp-for="TTKhachHang.TenKhachHang" type="text" class="form-control" disabled>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="TTKhachHang.SoDienThoai">Số điện thoại</label>
                    <input asp-for="TTKhachHang.SoDienThoai" type="text" class="form-control" disabled>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="TTKhachHang.DiaChi">Địa chỉ</label>
                    <input asp-for="TTKhachHang.DiaChi" type="text" class="form-control" disabled>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="hoaDonBan.MaNhanVien">Mã nhân viên</label>
                    <input asp-for="hoaDonBan.MaNhanVien" type="text" class="form-control" disabled>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="hoaDonBan.NgayHoaDon">Ngày hóa đơn</label>
                    <input asp-for="hoaDonBan.NgayHoaDon" type="text" class="form-control" disabled>
                </div>             
                <div class="form-group col-12">
                    <label asp-for="hoaDonBan.MaSoThue">Mã số thuế</label>
                    <input asp-for="hoaDonBan.MaSoThue" type="text" class="form-control" disabled>
                </div>

                <div class="col-12 form-group table-responsive users-table">
                    <label asp-for="ListCTHD">Sản phẩm</label>
                    <table class="table table-striped table-centered mb-0" id="products-table">
                        <table class="table table-hover table-centered mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>giá</th>
                                    <th>Số lượng</th>
                                  
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListCTHD)
                                {
                                    <tr>
                                        <td>@item.danhMucSp.TenSp</td>
                                        <td>@item.chiTietHdb.DonGiaBan</td>
                                        <td>@item.chiTietHdb.SoLuongBan</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="DanhMucHoaDon">Back to List</a>
</div>

