 @* Danh muc san pham *@
        <div class="container text-center my-5">
            <h1 class="display-2" id="product-list">Danh mục sản phẩm</h1>
            <p>Những sản phẩm nổi tiếng với chất lượng hàng đầu được shop nhập về phục vụ quý khách hàng</p>
            
            <ul class="d-flex flex-wrap justify-content-center gap-4 list-unstyled mt-5 mb-3">
                <li>
                    <a asp-action="FilterProductListByType" asp-controller="User" class="text-decoration-none text-black watch-type">
                        <img src="https://pngimg.com/uploads/watches/watches_PNG101443.png" alt="apple-watch" style="aspect-ratio: 16/9; height: 60px; object-fit: cover;" />
                        <p>All</p>
                    </a>
                </li>
                @foreach (var type in types)
                {
                    <li>
                        <a asp-action="FilterProductListByType" asp-controller="User" asp-route-type="@type.MaLoai" class="text-decoration-none text-black watch-type">
                            <img src="~//images/CategoryImg/+@type.TenFileAnh" alt="apple-watch" style="aspect-ratio: 16/9; height: 60px; object-fit: cover;" />
                            <p>@type.Loai</p>
                        </a>
                    </li>
                }
            </ul>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h4 class="font-bold">@watchType</h4>
                </div>
            </div>
            <ul class="row mt-3 p-0 text-center pro-box-section list-unstyled justify-content-center">
                <!-- Danh sach san pham-->
                @foreach(var product in Model)
                {
                  @await Html.PartialAsync("PartialProductItem", product);
                }
