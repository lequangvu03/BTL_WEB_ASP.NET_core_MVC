@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var types = ViewBag.Types as List<TLoaiSp>;
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>

@* Advertisement *@
<div id="main">
    <div class="slider">
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner" style="width: 100%; height: 100%;">
                <div class="carousel-item active">
                    <img src="/images/blog/dong-ho-nam-1593232989.jpg" class="d-block w-100 h-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/blog/dong-ho-thong-minh-8-800x450.webp" class="d-block w-100 h-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/blog/dong-ho-thong-minh-nhat-ban-gia-tot.webp" class="d-block w-100 h-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
@* Watch brand *@

<div>
    <div class="row">
        <div class="col-lg-12 text-center pt-3 mt-5">
            <h4 class="display-2">Đối tác</h4>
            <p>Bộ sưu tập những thương hiệu nổi tiếng về Smart Watch trên thế giới</p>
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/2203304222330.jpg" alt="Brand 8">
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/0022490409002.jpg" alt="Brand 7">
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/0022522013220.jpg" alt="Brand 6">
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/5425040400420.jpg" alt="Brand 4">
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/2502205354005.jpg" alt="Brand 3">
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand">
                    <img src="https://hinhanh.webvua.com/images/adv/4752/resize/0002032055322.jpg" alt="Brand 2">
                </div>
            </div>
           
        </div>

 @* Danh muc san pham *@
        <div class="container text-center my-5">
            <h1 class="display-2" id="product-list">Danh mục sản phẩm</h1>
            <p>Những sản phẩm nổi tiếng với chất lượng hàng đầu được shop nhập về phục vụ quý khách hàng</p>

                <ul class="d-flex flex-wrap justify-content-center gap-4 list-unstyled mt-5 mb-3">
                    <li class="fill">
                        <a id="ALL" class="text-decoration-none text-black watch-type">
                            <img src="https://pngimg.com/uploads/watches/watches_PNG101443.png" alt="apple-watch" style="aspect-ratio: 16/9; height: 60px; object-fit: cover;" />
                            <p>All</p>
                        </a>
                    </li>
                    @foreach (var type in types)
                    {
                        <li class="fill">
                            <a id="@type.MaLoai" class="text-decoration-none text-black watch-type">
                                <img src="~/images/CategoryImg/@type.TenFileAnh" alt="apple-watch" style="aspect-ratio: 16/9; height: 60px; object-fit: cover;" />
                                <p>@type.Loai</p>
                            </a>
                        </li>
                    }
                </ul>
          <div id="content">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h4 class="font-bold">All brand</h4>
                </div>
            </div>
            <ul class="row mt-3 p-0 text-center pro-box-section list-unstyled justify-content-center">
                <!-- Danh sach san pham-->
                @foreach(var product in Model)
                {
                    @await Html.PartialAsync("PartialProductItem", product);
                }
            </ul>
                    <ul class="pagination text-center justify-content-center">
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" data-page="@i">@i</a></li>
                        }
                    </ul>
                </div>
        </div>
</div>

</div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
@section Scripts{
    <script src="~/js/ajax.js"></script>
 

}
