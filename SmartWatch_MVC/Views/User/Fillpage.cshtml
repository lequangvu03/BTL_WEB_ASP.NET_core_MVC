@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDanhMucSp>
<div class="row">
    <div class="col-lg-12 text-center">
        <h4 class="font-bold">@ViewBag.Type</h4>
    </div>
</div>

<ul class="row mt-3 p-0 text-center pro-box-section list-unstyled justify-content-center">
    <!-- Danh sach san pham-->
    @if (Model != null)
    {
        @foreach (var product in Model)
        {
            @await Html.PartialAsync("PartialProductItem", product);
        }
    }
   
</ul>
<ul class="pagination text-center justify-content-center">
    @for (int i = 1; i <= Model.PageCount; i++)
    {
        <li class="page-item @(i == Model.PageNumber ? "active" : "")"><a class="page-link" data-page="@i">@i</a></li>
    }
</ul>